---
import ReactFilterContainer from './ReactFilterContainer';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';

interface Props {
  options: string[] | string[][];
  allLabels?: string[];
  showSearch?: boolean;
  id?: string;
  classes?: Record<string, string>;
  isDark?: boolean;
  bg?: string;
  gridId?: string;
  targetId?: string;
}

const {
  options,
  allLabels = ['All'],
  showSearch = true,
  id,
  classes = {},
  isDark = false,
  bg = await Astro.slots.render('bg'),
  gridId,
  targetId,
} = Astro.props;

const containerId = id || `filter-container-${Math.random().toString(36).substring(2, 11)}`;
---

<WidgetWrapper id={containerId} isDark={isDark} containerClass={classes?.container ?? `max-w-7xl mx-auto`} bg={bg}>
  <ReactFilterContainer
    client:load
    options={options}
    allLabels={allLabels}
    showSearch={showSearch}
    gridId={gridId}
    targetId={targetId}
  />
</WidgetWrapper>
