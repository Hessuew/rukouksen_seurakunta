---
import logoUrl from '~/assets/images/other/rukous_seurakunta_logo.webp';
import { getImage } from 'astro:assets';
import { SITE } from 'astrowind:config';

const optimizedLogo = await getImage({ src: logoUrl });

const organizationSchema = {
  '@context': 'https://schema.org',
  '@type': 'Organization',
  '@id': SITE.site,
  name: 'Rukouksen seurakunta',
  url: SITE.site,
  logo: {
    '@type': 'ImageObject',
    url: new URL(optimizedLogo.src, SITE.site).toString(),
    width: '640',
    height: '640',
  },
  description:
    'Tervetuloa rukouksen seurakuntaan Kuopiossa. Osallistu tapahtumiimme, kuten Jesus Fest Kuopio, tapaa vahmimmat, kuten Juhani Juusola, ja koe Pyh√§n Hengen tuli Kuopiossa.',
};
---

<script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
