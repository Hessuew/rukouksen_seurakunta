---
import { twMerge } from 'tailwind-merge';

const {
  style2 = false,
  text = Astro.slots.render('default'),
  class: className = '',
  isHeading = false,
} = Astro.props as {
  style2?: boolean;
  text: string;
  class?: string;
  isHeading?: boolean;
};
---

<span
  class={twMerge(
    'text-primary highlight inline-block',
    style2 && 'bg-gradient-to-r from-orange-600 to-yellow-500 text-transparent bg-clip-text italic',
    className,
    isHeading && 'text-5xl md:text-6xl font-bold leading-tighter tracking-tighter mb-4 font-heading'
  )}>{text}</span
>
