---
import { Icon } from 'astro-icon/components';
import WidgetWrapper from '../ui/WidgetWrapper.astro';
---

<style>
  .pushable {
    position: relative;
    border: none;
    background: transparent;
    padding: 0;
    cursor: pointer;
    outline-offset: 4px;
    transition: filter 250ms;
  }
  .shadow {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius: 24px;
    background: hsl(0deg 0% 0% / 0.25);
    will-change: transform;
    transform: translateY(2px);
    transition: transform 600ms cubic-bezier(0.3, 0.7, 0.4, 1);
  }
  .edge {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius: 24px;
    background: linear-gradient(
      to left,
      hsl(213deg 51% 16%) 0%,
      hsl(213deg 51% 32%) 8%,
      hsl(213deg 51% 32%) 92%,
      hsl(213deg 51% 16%) 100%
    );
  }
  .front {
    display: block;
    position: relative;
    padding: 12px 42px;
    border-radius: 24px;
    font-size: 1.25rem;
    color: white;
    background: hsl(213, 51%, 57%);
    /* background: hsl(345deg 100% 47%); */
    /* background: var(--aw-color-primary); */
    will-change: transform;
    transform: translateY(-4px);
    transition: transform 600ms cubic-bezier(0.3, 0.7, 0.4, 1);
  }

  .pushable:hover {
    filter: brightness(110%);
  }

  .pushable:hover .front {
    transform: translateY(-6px);
    transition: transform 250ms cubic-bezier(0.3, 0.7, 0.4, 1.5);
  }
  .pushable:active .front {
    transform: translateY(-2px);
    transition: transform 34ms;
  }

  .pushable:hover .shadow {
    transform: translateY(4px);
    transition: transform 250ms cubic-bezier(0.3, 0.7, 0.4, 1.5);
  }
  .pushable:active .shadow {
    transform: translateY(1px);
    transition: transform 34ms;
  }

  .pushable:focus:not(:focus-visible) {
    outline: none;
  }

  @keyframes hover {
    0% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-50px);
    }
    100% {
      transform: translateY(0);
    }
  }

  .smooth-hover {
    animation: hover 3s ease-in-out infinite;
    animation-timing-function: cubic-bezier(0.45, 0, 0.55, 1);
  }

  .down-arrow {
    opacity: 0;
    transition: opacity 0.3s ease-in-out;
  }

  .down-arrow.visible {
    opacity: 1;
  }
</style>

<WidgetWrapper>
  <div class="flex flex-col items-center pb-20 relative">
    <button id="pressMeButton" class="pushable">
      <span class="shadow"></span>
      <span class="edge"></span>
      <span class="front">
        <div class="flex flex-row items-center gap-2">
          Press Me
          <Icon name="tabler:hand-click" class="mt-3 w-6 h-6" />
        </div>
      </span>
    </button>
    <div class="down-arrow absolute -bottom-10">
      <Icon name="tabler:chevron-down" color="orange" class="w-10 h-10 smooth-hover" />
    </div>
  </div>
</WidgetWrapper>

<script>
  function applyTheme(theme) {
    if (theme === 'dark') {
      document.documentElement.classList.add('dark');
    } else {
      document.documentElement.classList.remove('dark');
    }
  }

  function initButton() {
    const button = document.querySelector('#pressMeButton');
    const videoBackground = document.querySelector('#videoBackground');
    const downArrow = document.querySelector('.down-arrow');

    if (button && videoBackground) {
      button.addEventListener('click', () => {
        console.log('Button clicked!');
        videoBackground.classList.remove('opacity-0');
        videoBackground.classList.add('opacity-100');
        button.classList.add('opacity-0', 'pointer-events-none');

        // Show down arrow after 500ms
        if (downArrow) {
          setTimeout(() => {
            downArrow.classList.add('visible');
          }, 500);
        }

        // Toggle dark mode
        localStorage.theme = 'dark';
        applyTheme('dark');
      });
    }
  }

  // Run immediately
  initButton();

  // Run again after page load to catch any dynamically loaded elements
  window.addEventListener('load', initButton);

  // Run when Astro view transitions complete
  document.addEventListener('astro:page-load', initButton);

  // // Run initialization when the DOM is ready
  // if (document.readyState === 'loading') {
  //   document.addEventListener('DOMContentLoaded', initButton);
  // } else {
  //   initButton();
  // }
</script>
