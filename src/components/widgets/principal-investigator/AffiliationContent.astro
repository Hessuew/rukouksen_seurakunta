---
interface Props {
  title: string;
  description: string;
  hrefLabel?: string;
  link?: {
    url: string;
    text: string;
  };
}

const { title, description, hrefLabel, link } = Astro.props;
---

<Fragment>
  <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">{title}</h3>
  {description}
  <br />
  <br />
  {
    link && (
      <a
        href={link.url}
        class="inline-flex items-center text-blue-600 hover:underline"
        target="_blank"
        rel="noopener noreferrer nofollow"
        aria-label={`Learn more about ${hrefLabel} (opens in new tab)`}
      >
        {link.text} â†’
      </a>
    )
  }
</Fragment>
