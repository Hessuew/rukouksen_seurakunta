---
import type { ImageMetadata } from 'astro';

interface Props {
  title: string;
  description: string;
  hrefLabel?: string;
  link?: {
    url: string;
    text: string;
  };
  image?: ImageMetadata;
}

const { title, description, hrefLabel, link, image } = Astro.props;
---

<Fragment>
  <div class="relative">
    <div class="space-y-4 relative z-10">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl">{title}</h3>
      <p class="text-lg max-w-[80%]">{description}</p>
      <div class="flex items-start">
        {
          link && (
            <a
              href={link.url}
              class="inline-flex items-center text-blue-600 hover:underline text-lg"
              target="_blank"
              rel="noopener noreferrer nofollow"
              aria-label={`Learn more about ${hrefLabel} (opens in new tab)`}
            >
              {link.text} â†’
            </a>
          )
        }
      </div>
    </div>
    {
      image && (
        <div class="absolute top-0 right-0 -translate-y-1/4">
          <img
            src={image.src}
            alt={`${title} logo`}
            class="h-40 w-auto object-contain opacity-90 hover:opacity-100 transition-opacity"
          />
        </div>
      )
    }
  </div>
</Fragment>
