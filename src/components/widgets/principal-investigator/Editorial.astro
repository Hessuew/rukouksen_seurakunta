---
import BlueBackground from '../BlueBackground.astro';
import Features3 from '../Features3.astro';
import Pricing from '../Pricing.astro';
import Spacer from '../Spacer.astro';
---

<section role="region" aria-labelledby="editorial-heading">
  <h2 id="editorial-heading" class="sr-only">Editorial and Journal Roles</h2>
  <Pricing
    id="editorial"
    tagline="Editor / Reviewer"
    title="Scientific Journal Stewardship"
    subtitle="Shaping Scientific Publishing Excellence"
    impactFactors={[
      {
        title: 'Editorial Board',
        subtitle: 'Arteriosclerosis Thrombosis and Vascular Biology',
        impactFactor: '7.4',
        impactLabel: 'Impact Factor',
        items: [
          {
            description: 'Leading cardiovascular journal',
          },
          {
            description: 'Editorial Board member',
          },
          {
            description: 'Focus on vascular biology',
          },
        ],
        hasRibbon: true,
        medalColor: 'silver',
        position: 'second',
      },
      {
        title: 'Associate Editor',
        subtitle: 'Journal of Cachexia, Sarcopenia, and Muscle',
        impactFactor: '9.4',
        impactLabel: 'Impact Factor',
        items: [
          {
            description: 'High-impact medical journal',
          },
          {
            description: 'Associate Editor role',
          },
          {
            description: 'Focus on muscle and metabolism research',
          },
        ],
        hasRibbon: true,
        medalColor: 'gold',
        position: 'first',
      },
      {
        title: 'Editorial Board',
        subtitle: 'Paediatric Exercise Science',
        impactFactor: '2.8',
        impactLabel: 'Impact Factor',
        items: [
          {
            description: 'Editorial Board Member',
          },
          {
            description: 'Statistics and Grants Reviewer',
          },
          {
            description: 'Focus on youth exercise research',
          },
        ],
        hasRibbon: true,
        medalColor: 'bronze',
        position: 'third',
      },
    ]}
  >
    <Fragment slot="bg">
      <BlueBackground />
    </Fragment>
  </Pricing>

  <!-- Features3 Widget ******************* -->

  <Features3
    columns={3}
    defaultIcon="tabler:building-community"
    classes={{
      container: 'lg:pt-0 md:pt-0',
      headline: { subtitle: 'mt-0' },
    }}
    items={[
      {
        title: 'High Impact Journals',
        description: `
              • European Heart Journal (IF: 35.8)<br/>
              • Journal of the American College of Cardiology (IF: 27.2)<br/>
              • Annals of Internal Medicine (IF: 25.4)<br/>
              • Diabetes Care (IF: 20.7)<br/>
              • Circulation Research (IF: 17.4)
            `,
        icon: 'tabler:star',
      },
      {
        title: 'Cardiovascular Research',
        description: `
              • Arteriosclerosis, Thrombosis, and Vascular Biology<br/>
              • Hypertension<br/>
              • European Journal of Preventive Cardiology<br/>
              • Atherosclerosis<br/>
              • Journal of Hypertension<br/>
              • Vascular Medicine
            `,
        icon: 'tabler:heart',
      },
      {
        title: 'Pediatrics & Exercise Science',
        description: `
              • Pediatrics<br/>
              • Sports Medicine<br/>
              • Medicine & Science in Sports & Exercise<br/>
              • International Journal of Obesity<br/>
              • Archives of Disease in Childhood<br/>
              • Pediatric Exercise Science
            `,
        icon: 'tabler:run',
      },
      {
        title: 'Endocrinology & Metabolism',
        description: `
              • The Journal of Clinical Endocrinology & Metabolism<br/>
              • Metabolism: Clinical and Experimental<br/>
              • Journal of the Endocrine Society<br/>
              • Obesity Reviews<br/>
              • Journal of Cachexia, Sarcopenia, and Muscle
            `,
        icon: 'tabler:dna',
      },
      {
        title: 'Grant Review',
        description: `
              • Netherlands Organisation for Scientific Research (NWO/ZonMw)<br/>
              • National Institute for Health and Care Research, UK<br/>
              • International Research Grant Reviewer
            `,
        icon: 'tabler:coin',
      },
      {
        title: 'Additional Journals',
        description: `
              • BMC Medicine<br/>
              • BMJ Open<br/>
              • Frontiers in Pediatrics<br/>
              • Journal of Adolescent Health<br/>
              • Clinical Epidemiology<br/>
              • Annals of Medicine
            `,
        icon: 'tabler:books',
      },
    ]}
  >
    <Fragment slot="subtitle">
      <h3 class="text-xl font-bold tracking-tight text-muted dark:text-white sm:text-xl mb-2">
        Regular reviewer for leading journals in cardiovascular medicine, pediatrics, and exercise science
      </h3>
    </Fragment>
    <Fragment slot="bg">
      <BlueBackground />
    </Fragment>
  </Features3>
</section>

<!-- Spacer ******************* -->

<Spacer size="sm" />
