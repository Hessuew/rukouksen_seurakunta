---
import BlueBackground from '../BlueBackground.astro';
import Features3 from '../Features3.astro';
import Pricing from '../Pricing.astro';
import Spacer from '../Spacer.astro';

export const editorialItems = [
  {
    title: 'Top-tier Medical Journals',
    description: [
      'European Heart Journal',
      'Journal of the American College of Cardiology',
      'Annals of Internal Medicine',
      'Diabetes Care',
      'Circulation Research',
    ],
    icon: 'tabler:star',
  },
  {
    title: 'Endocrinology & Metabolism',
    description: [
      'The Journal of Clinical Endocrinology & Metabolism',
      'Metabolism: Clinical and Experimental',
      'Journal of the Endocrine Society',
      'Obesity Reviews',
      'Journal of Cachexia, Sarcopenia, and Muscle',
      'Digestive Diseases and Sciences',
      'International Journal of Obesity',
    ],
    icon: 'tabler:dna',
  },
  {
    title: 'Pediatrics',
    description: [
      'Pediatrics',
      'Archives of Disease in Childhood',
      'Pediatric Exercise Science',
      'Acta Pediatrica',
      'Pediatric Cardiology',
      'BMC Pediatrics',
      'Frontiers in Pediatrics',
      'Journal of Adolescent Health',
    ],
    icon: 'tabler:mood-tongue-wink',
  },
  {
    title: 'Sport and Exercise Medicine',
    description: [
      'Sports Medicine',
      'Medicine & Science in Sports & Exercise',
      'Scandinavian Journal of Medicine & Science in Sports',
      'European Journal of Sports Science',
      'Clinical Physiology and Functional Imaging',
      'Frontiers in Sports and Active Living',
    ],
    icon: 'tabler:run',
  },
  {
    title: 'Grant & Abstract Review',
    description: [
      'Netherlands Organisation for Scientific Research',
      'National Institute for Health and Care Research, UK',
      'European Society of Cardiology Congress Abstract Reviewer',
    ],
    icon: 'tabler:coin',
  },
  {
    title: 'Medicine / Epidemiology',
    description: [
      'BMC Medicine',
      'BMJ Open',
      'PLOS One',
      'BMJ Open Respiratory Research',
      'Clinical Epidemiology',
      'Annals of Epidemiology',
      'Annals of Medicine',
      'SAGE Open Medicine',
    ],
    icon: 'tabler:books',
  },
  {
    title: 'Cardiovascular Research',
    description: [
      'Arteriosclerosis, Thrombosis, and Vascular Biology',
      'Arteriosclerosis',
      'Hypertension',
      'European Journal of Preventive Cardiology',
      'Atherosclerosis',
