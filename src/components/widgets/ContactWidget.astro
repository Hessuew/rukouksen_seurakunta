---
import GradientText from '~/components/ui/GradientText.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import { getLangFromUrl, useTranslations } from '~/i18n/utils';
import { Icon } from 'astro-icon/components';
import Headline from '../ui/Headline.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

export interface Props {
  id?: string;
  isDark?: boolean;
  containerClass?: string;
  title?: string;
  subtitle?: string;
  prayerZoomLink?: string;
  bibleStudyZoomLink?: string;
  email?: string;
  phone?: string;
}

const {
  id = 'contact',
  isDark = false,
  containerClass = '',
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  prayerZoomLink = '',
  bibleStudyZoomLink = '',
  email = '',
  phone = '',
} = Astro.props;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={containerClass}>
  <div class="mx-auto max-w-4xl">
    <Headline title={title} subtitle={subtitle} />

    <!-- Main Content Grid -->
    <div class="gap-8 items-start">
      <!-- Zoom Meeting Cards -->
      <GradientText class="text-xl font-semibold mb-4 block"> {t('zoomTitle')} </GradientText>

      <div class="flex flex-col lg:flex-row gap-4 xl:gap-[16px]">
        <!-- Prayer Meeting Card -->
        <div
          class="bg-gray-800/40 dark:bg-gray-800/60 backdrop-blur-sm rounded-xl shadow-lg border border-blue-200/20 dark:border-blue-400/30 p-6 hover:shadow-xl hover:bg-gray-800/60 dark:hover:bg-gray-800/80 hover:border-blue-300/40 dark:hover:border-blue-400/50 transition-all duration-300 group cursor-pointer"
        >
          <div class="flex items-start space-x-4">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900 rounded-lg flex items-center justify-center">
                <Icon name="tabler:pray" class="w-6 h-6 text-blue-600 dark:text-blue-400" />
              </div>
            </div>
            <div class="flex-1">
              <GradientText class="text-lg font-semibold mb-2 block"> {t('prayerMeetingTitle')} </GradientText>
              <p class="text-gray-300 dark:text-gray-300 mb-4" set:html={t('prayerMeetingSubtitle')} />
              <a
                href={prayerZoomLink}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center px-4 py-2 bg-blue-600/80 hover:bg-blue-600 group-hover:bg-blue-500 text-white font-medium rounded-lg transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-offset-2 focus:ring-offset-transparent hover:scale-105 transform"
              >
                <svg
                  class="w-4 h-4 mr-2 transition-transform group-hover:scale-110"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm5.568 8.16l-5.568 3.568-5.568-3.568c-.32-.205-.32-.64 0-.845L11.2 4.747c.32-.205.64-.205.96 0l4.768 2.568c.32.205.32.64 0 .845z"
                  ></path>
                </svg>
                {t('joinOurZoomMeeting')}
              </a>
            </div>
          </div>
        </div>

        <!-- Bible Study Card -->
        <div
          class="bg-gray-800/40 dark:bg-gray-800/60 backdrop-blur-sm rounded-xl shadow-lg border border-green-200/20 dark:border-green-400/30 p-6 hover:shadow-xl hover:bg-gray-800/60 dark:hover:bg-gray-800/80 hover:border-green-300/40 dark:hover:border-green-400/50 transition-all duration-300 group cursor-pointer"
        >
          <div class="flex items-start space-x-4">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-green-100 dark:bg-green-900 rounded-lg flex items-center justify-center">
                <Icon name="tabler:book" class="w-6 h-6 text-green-600 dark:text-green-400" />
              </div>
            </div>
            <div class="flex-1">
              <GradientText class="text-lg font-semibold mb-2 block"> {t('bibleStudyTitle')} </GradientText>
              <p class="text-gray-300 dark:text-gray-300 mb-4" set:html={t('bibleStudySubtitle')} />
              <a
                href={bibleStudyZoomLink}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center px-4 py-2 bg-green-600/80 hover:bg-green-600 group-hover:bg-green-500 text-white font-medium rounded-lg transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-green-400 focus:ring-offset-2 focus:ring-offset-transparent hover:scale-105 transform"
              >
                <svg
                  class="w-4 h-4 mr-2 transition-transform group-hover:scale-110"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm5.568 8.16l-5.568 3.568-5.568-3.568c-.32-.205-.32-.64 0-.845L11.2 4.747c.32-.205.64-.205.96 0l4.768 2.568c.32.205.32.64 0 .845z"
                  ></path>
                </svg>
                {t('joinOurZoomMeeting')}
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Contact Information -->
      <div class="space-y-6 pt-8 pb-12 xl:pt-[32px] xl:pb-[48px]">
        <GradientText class="text-xl font-semibold block"> {t('contactInfoTitle')} </GradientText>
        <div class="flex flex-col lg:flex-row gap-4 xl:gap-[16px]">
          <!-- Email Card -->
          <div
            class="flex-1 bg-gray-800/40 dark:bg-gray-800/60 backdrop-blur-sm rounded-xl shadow-lg border border-blue-200/20 dark:border-blue-400/30 p-6 hover:shadow-xl hover:bg-gray-800/60 dark:hover:bg-gray-800/80 hover:border-blue-300/40 dark:hover:border-blue-400/50 transition-all duration-300 group"
          >
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0">
                <div
                  class="w-10 h-10 bg-blue-500/20 dark:bg-blue-500/30 rounded-lg flex items-center justify-center group-hover:bg-blue-500/30 dark:group-hover:bg-blue-500/40 transition-colors"
                >
                  <svg
                    class="w-5 h-5 text-blue-400 dark:text-blue-300"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                    ></path>
                  </svg>
                </div>
              </div>
              <div class="flex flex-col gap-1">
                <GradientText class="font-medium mb-1 block text-sm"> {t('email')} </GradientText>
                <a
                  href={`mailto:${email}`}
                  class="text-blue-300 hover:text-blue-200 dark:text-blue-300 dark:hover:text-blue-200 transition-colors hover:underline"
                >
                  {email}
                </a>
              </div>
            </div>
          </div>

          <!-- Phone Card -->
          <div
            class="flex-1 bg-gray-800/40 dark:bg-gray-800/60 backdrop-blur-sm rounded-xl shadow-lg border border-green-200/20 dark:border-green-400/30 p-6 hover:shadow-xl hover:bg-gray-800/60 dark:hover:bg-gray-800/80 hover:border-green-300/40 dark:hover:border-green-400/50 transition-all duration-300 group"
          >
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0">
                <div
                  class="w-10 h-10 bg-green-500/20 dark:bg-green-500/30 rounded-lg flex items-center justify-center group-hover:bg-green-500/30 dark:group-hover:bg-green-500/40 transition-colors"
                >
                  <svg
                    class="w-5 h-5 text-green-400 dark:text-green-300"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                    ></path>
                  </svg>
                </div>
              </div>
              <div class="flex flex-col gap-1">
                <GradientText class="font-medium mb-1 block text-sm"> {t('phoneNumber')} </GradientText>
                <a
                  href={`tel:${phone}`}
                  class="text-green-300 hover:text-green-200 dark:text-green-300 dark:hover:text-green-200 transition-colors hover:underline"
                >
                  {phone}
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Additional Info Card -->
      <div
        class="bg-gray-800/40 dark:bg-gray-800/60 backdrop-blur-sm rounded-xl shadow-lg border border-purple-200/20 dark:border-purple-400/30 p-6 hover:shadow-xl hover:bg-gray-800/60 dark:hover:bg-gray-800/80 hover:border-purple-300/40 dark:hover:border-purple-400/50 transition-all duration-300"
      >
        <GradientText class="text-xl xl:text-[20px] xl:leading-[28px] font-semibold mb-3 block">
          {t('welcomeToOurMeetingsTitle')}
        </GradientText>
        <p class="text-gray-300 dark:text-gray-300 text-sm leading-relaxed">
          {t('welcomeToOurMeetingsSubtitle')}
        </p>
      </div>
    </div>
  </div>
</WidgetWrapper>
