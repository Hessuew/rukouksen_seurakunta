const metadata = {
  title: "urFIT-child Research Group | Advancing Children's Health Assessment",
  description:
    "Leading research group dedicated to revolutionizing children's health assessment through evidence-based methods. Discover our groundbreaking findings on waist-to-height ratio and obesity diagnosis.",
  ignoreTitleTemplate: true,
  canonical: 'https://urfit-child.com',
  openGraph: {
    title: "urFIT-child Research Group | Advancing Children's Health Assessment",
    description:
      "Leading research group dedicated to revolutionizing children's health assessment through evidence-based methods. Discover our groundbreaking findings on waist-to-height ratio and obesity diagnosis.",
