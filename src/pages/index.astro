---
import logo from '~/assets/images/other/logo.webp';
import AboutUs from '~/components/sections/AboutUs.astro';
import BottomGrid from '~/components/sections/BottomGrid.astro';
import Events from '~/components/sections/Events.astro';
import ForYou from '~/components/sections/ForYou.astro';
import JesusDescription from '~/components/sections/JesusDescription.astro';
import JesusIntroduction from '~/components/sections/JesusIntroduction.astro';
import Landing from '~/components/sections/Landing.astro';
import TestimonialsSection from '~/components/sections/TestimonialsSection.astro';
import WhatWeBelieve from '~/components/sections/WhatWeBelieve.astro';
import Spacer from '~/components/widgets/Spacer.astro';
import SpeechBubbleIcon from '~/components/widgets/SpeechBubbleIcon.astro';
import Stats from '~/components/widgets/Stats.astro';
import { getLangFromUrl, useTranslations } from '~/i18n/utils';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Rukouksen seurakunta | Meidän tulemme on Jeesus',
  description:
    'Rukouksen seurakunta Kuopio on ryhmä, joka keskittyy Jeesukseen, intohimoiseen rukoukseen, Hengen ja Sanan täyttämään elämään, sekä herätyksen levittämiseen. Tule mukaan rukouskokouksiin ja kohtaa Jeesus. Savilahti, Kuopio.',
  ignoreTitleTemplate: true,
  canonical: 'https://rukouksenseurakunta.fi',
  openGraph: {
    title: 'Rukouksen seurakunta | Meidän tulemme on Jeesus',
    description:
      'Rukouksen seurakunta Kuopio on ryhmä, joka keskittyy Jeesukseen, intohimoiseen rukoukseen, Hengen ja Sanan täyttämään elämään, sekä herätyksen levittämiseen. Tule mukaan rukouskokouksiin ja kohtaa Jeesus. Savilahti, Kuopio.',
    type: 'website',
    image: logo,
    article: {
      publishedTime: '2025-03-03T05:03:23+02:00',
      modifiedTime: '2025-03-03T05:03:23+02:00',
      authors: ['Rukouksen seurakunta'],
      tags: [
        'Rukouksen seurakunta',
        'Rukouksen seurakunta Kuopio',
        'seurakunta Kuopio',
        'seurakunta Savilahti',
        'Savilahden seurakunta',
      ],
    },
  },
  twitter: {
    handle: '@RukouksenSrk',
    site: '@RukouksenSrk',
    cardType: 'summary_large_image',
  },
};

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout metadata={metadata}>
  <Landing />

  <JesusIntroduction />

  <JesusDescription />

  <WhatWeBelieve />

  <AboutUs />

  <TestimonialsSection />

  <SpeechBubbleIcon
    position="bottom-right"
    size="lg"
    classes={{
      icon: 'text-yellow-500 hover:text-yellow-600',
      container: 'mb-16 mr-4',
    }}
  />

  <Stats
    id="lukuja"
    tagline={t('practicalNumbersFrom2025')}
    title=""
    stats={[
      { title: t('stats1.title'), amount: 18 },
      { title: t('stats2.title'), amount: 685, extra: '+' },
      { title: t('stats3.title'), amount: 19 },
      { title: t('stats4.title'), amount: 4 },
    ]}
  />

  <ForYou />

  <Events />

  <Spacer size="md" />

  <BottomGrid />
</Layout>
