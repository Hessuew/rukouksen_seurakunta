    videoId: '1n85Kj7kjfU',
    platform: 'youtube',
  },
  {
    title: 'European Congress on Obesity 2024: EASO Pre-conference Interview',
    date: '11.05.2024',
    videoId: '944938770/8269ce30e4',
    platform: 'vimeo',
  },
  {
    title: 'CTV News: Sedentariness and Heart Damage',
    date: '07.05.2024',
