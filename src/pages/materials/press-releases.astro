---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import AGGridWidget from '~/components/widgets/AGGridWidget.astro';
import { pressReleases, categories, topics, pressReleaseColumnDefs } from '~/data/pressReleases';
import Spacer from '~/components/widgets/Spacer.astro';

const metadata = {
  title: 'Press Releases',
  description: 'Discover the latest research insights and media coverage of urFIT-child',
};
---

<Layout metadata={metadata}>
  <Hero title="Press Releases" subtitle="Discover the latest research insights and media coverage of urFIT-child" />

  <AGGridWidget
    gridId="pressReleasesGrid"
    categories={categories}
    topics={topics}
    data={pressReleases}
    columnDefs={pressReleaseColumnDefs}
  />

  <Spacer />
</Layout>
