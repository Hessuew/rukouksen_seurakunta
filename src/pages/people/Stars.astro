const { children } = Astro.props;
---

<div class="relative w-full h-screen bg-gradient-to-b from-black via-blue-950 to-black">
  {
    stars.map((star) => (
      <div
        class="absolute bg-white rounded-full"
        style={{
          top: `${star.y * 100}%`,
          left: `${star.x * 100}%`,
          width: `${star.width * 2}px`,
          height: `${star.height * 2}px`,
          opacity: `${star.opacity * 0.5}`,
        }}
      >
        <div class="absolute z-10 w-full h-full bg-red-200">{children}</div>
      </div>
    ))
  }
</div>
