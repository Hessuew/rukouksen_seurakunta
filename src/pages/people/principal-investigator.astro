  <!-- Content Widget **************** -->

  <Content
    id="image"
    defaultIcon="tabler:point-filled"
    classes={{ container: 'lg:pt-0 lg:pt-0 md:pt-0 md:pt-0', icon: 'text-primary dark:text-primary' }}
